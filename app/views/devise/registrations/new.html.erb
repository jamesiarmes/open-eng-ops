<%= render 'devise/shared/unauth_layout' do %>
  <h2 class="fw-bold mb-4 pb-2">Create Account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
    <div class="form-outline mb-3">
      <%= render 'shared/form/text_field', form: form, type: :email,
                 field: :email, classes: 'form-control-lg',
                 autofocus: true, required: true %>
    </div>

    <div class="form-outline mb-0">
      <%= render 'shared/form/text_field', form: form, type: :password,
                 field: :password, classes: 'form-control-lg',
                 required: true %>
      <%# if @minimum_password_length %>
      <!--                        <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
      <!--                      <%# end %><br />-->
    </div>

    <div class="form-outline mb-4">
      <%= render 'shared/form/text_field', form: form, type: :password,
                 field: :password_confirmation, classes: 'form-control-lg',
                 required: true %>
    </div>

    <div class="form-outline mb-4">
      <%= render 'shared/form/text_field', form: form,
                 field: :name, classes: 'form-control-lg',
                 required: true %>
    </div>

    <div class="form-outline mb-4">
      <%= render 'shared/form/text_field', form: form,
                 field: :pronouns, classes: 'form-control-lg',
                 required: true %>
    </div>

    <%# if devise_mapping.rememberable? %>
    <!--                      <div class="field">-->
    <%#= form.check_box :remember_me, class: 'form_control' %>
    <%#= form.label :remember_me %>
    <!--                      </div>-->
    <%# end %>

    <div class="actions text-center">
      <%= form.submit 'Create account', class: 'btn btn-info btn-block btn-lg' %>

      <%= render "devise/shared/links" %>
    </div>
  <% end %>
<% end %>
