<%= turbo_frame_tag 'github-collaborators' do %>
  <%= render Table::Component.new do |table| %>
    <%= table.with_header(title: 'Login') %>

    <% @collaborators[:data].each do |collaborator| %>
      <%= table.with_row do |row| %>
        <%= row.with_column do %>
          <%= image_tag collaborator.avatar_url, class: 'rounded-circle avatar-sm', alt: "Avatar for #{collaborator.login}" %>
          <%= link_to collaborator.login, collaborator.html_url, data: { turbo_frame: '_top' } %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= render partial: 'pagination', object: @collaborators[:page_info],
             locals: { label: 'Github organization members pagination', frame: 'github-members' } %>
<% end %>
