<%= turbo_frame_tag 'github-team-members' do %>
  <%= render Table::Component.new do |table| %>
    <% table.with_header(title: 'Login') %>

    <% @members[:data].each do |member| %>
      <% table.with_row do |row| %>
        <% row.with_column do %>
          <img src="<%= url_for(member.avatar_url) %>"
               alt="Avatar for <%= member.login %>"
               class="rounded-circle avatar-sm" />
          <%= link_to member.login, member.html_url, data: { turbo_frame: '_top'} %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= render partial: 'pagination', object: @members[:page_info],
             locals: { label: 'Github team members pagination', frame: 'github-team-members' } %>
<% end %>
