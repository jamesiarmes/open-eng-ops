<div class="header">
  <div class="container text-center">
    <div class="row">
      <div class="col-4">
        <div class="card shadow mb-4">
          <div class="card-body text-center">
            <% if @service.org.avatar_url %>
              <img class="avatar-lg" alt="GitHub image for <%= @service.org.name %>" src="<%= @service.org.avatar_url %>" />
            <% else %>
              <i class="fab fa-github default-avatar-lg"></i>
            <% end %>

            <h5 class="mt-3">
              <% if @service.org.name %>
                <%= @service.org.name %>
              <% else %>
                <%= @service.org.login %>
              <% end %>
            </h5>
            <p class="text-muted mb-3"><%= @service.org.description %></p>

            <div class="d-flex justify-content-center mb-2">
              <% if policy(@service).edit? %>
                <%= link_to t('.update'), edit_service_path(@service), class: 'btn btn-primary' %>
              <% end %>

              <% if policy(@service).destroy? %>
                <%= link_to t('common.delete'), service_path(@service), class: 'btn btn-danger',
                            data: { turbo_method: :delete, turbo_confirm: t('services.show.confirm-delete') } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-8">
        <div class="card shadow mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-3">
                <p class="mb-0">Name</p>
              </div>
              <div class="col-9">
                <p class="text-muted mb-0"><%= @service.org.name %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-3">
                <p class="mb-0">Login</p>
              </div>
              <div class="col-9">
                <p class="text-muted mb-0"><%= @service.org.login %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-3">
                <p class="mb-0">Description</p>
              </div>
              <div class="col-9">
                <p class="text-muted mb-0"><%= @service.org.description %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-3">
                <p class="mb-0">Created</p>
              </div>
              <div class="col-9">
                <p class="text-muted mb-0"><%= @service.org.created_at.to_formatted_s(:long_ordinal) %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
