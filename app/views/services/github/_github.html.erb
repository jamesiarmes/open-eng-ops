<div class="header">
  <div class="container text-center">
    <div class="row">
      <div class="col-4">
        <%= render Card::Component.new do |card| %>
          <div class="text-center">
            <%= render Avatar::Component.new(
              src: @service.org.avatar_url, name: @service.org.name, size: :lg,
              default: default_github_icon(size: :lg)) %>

            <h5 class="mt-3">
              <% if @service.org.name %>
                <%= @service.org.name %>
              <% else %>
                <%= @service.org.login %>
              <% end %>
            </h5>
            <p class="text-muted mb-3"><%= @service.org.description %></p>
          </div>

          <% card.with_footer do %>
            <div class="d-flex justify-content-center mb-2">
              <% if policy(@service).edit? %>
                <%= link_to t('.update'), edit_service_path(@service), class: 'btn btn-primary' %>
              <% end %>

              <% if policy(@service).destroy? %>
                <%= link_to t('common.delete'), service_path(@service), class: 'btn btn-danger',
                            data: { turbo_method: :delete, turbo_confirm: t('services.show.confirm-delete') } %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="col-8">
        <%= render Card::Component.new do |card| %>
          <div class="row">
            <div class="col-3">
              <p class="mb-0">Name</p>
            </div>
            <div class="col-9">
              <p class="text-muted mb-0"><%= @service.org.name %></p>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-3">
              <p class="mb-0">Login</p>
            </div>
            <div class="col-9">
              <p class="text-muted mb-0"><%= @service.org.login %></p>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-3">
              <p class="mb-0">Description</p>
            </div>
            <div class="col-9">
              <p class="text-muted mb-0"><%= @service.org.description %></p>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-3">
              <p class="mb-0">Created</p>
            </div>
            <div class="col-9">
              <p class="text-muted mb-0"><%= @service.org.created_at.to_formatted_s(:long_ordinal) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
