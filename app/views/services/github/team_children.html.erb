<%= turbo_frame_tag 'github-team-children' do %>
<table data-mdb-fixed-header="true" class="table table-hover table-striped table-sticky align-middle mb-0 bg-white github-repos">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Description</th>
    <th scope="col">Parent</th>
    <th scope="col">Notifications</th>
  </tr>
  </thead>
  <tbody>
  <% @children[:data].each do |team| %>
    <tr>
      <td>
        <i class="fa-solid <%= case team.privacy
                               when 'closed' then 'fa-door-closed'
                               when 'secret' then 'fa-user-secret'
                               else 'fa-people-group'
                               end %>"
           title="<%= team.privacy.capitalize %>"></i>
        <%= link_to team.name, services_github_team_path(@service, team: team.id), data: { turbo_frame: '_top'} %>
      </td>
      <td><%= team.description %></td>
      <td><%= team.parent&.name %></td>
      <td>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch"
                 <% if team.notification_setting == 'notifications_enabled' %> checked <% end %>
                 disabled />
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= render partial: 'pagination', object: @children[:page_info],
           locals: { label: 'Github team children pagination', frame: 'github-team-children' } %>
<% end %>
