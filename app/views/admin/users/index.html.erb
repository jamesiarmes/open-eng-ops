<div class="w-full">
  <div class="text-end p-2">
    <%# TODO: Replace with new user link %>
    <%# link_to t('.new'), new_service_path, class: 'btn btn-primary' %>
    <a href="#" class="btn btn-primary">New user</a>
    <%# link_to "Invite New User", new_user_invitation_path %>
  </div>

  <% if policy(current_user).index? %>
    <table class="table align-middle mb-0 bg-white">
      <thead>
      <tr>
        <th scope="col">Name<%# t('.name') %></th>
        <th scope="col">Email<%# t('.type') %></th>
        <th scope="col">Created<%# t('.type') %></th>
        <th scope="col">Roles<%# t('.config') %></th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <% if user.avatar.attached? %>
                <img src="<%= url_for(user.avatar) %>"
                     alt="Avatar for <%= user.name %>"
                     class="rounded-circle avatar-sm" />
              <% else %>
                <i class="bi bi-person-circle rounded-circle default-avatar-sm"></i>
              <% end %>

              <div class="ms-3">
                <p class="fw-bold mb-1"><%= link_to user.name, admin_user_path(user) %></p>
                <p class="text-muted mb-0"><%= user.pronouns %></p>
              </div>
            </div>
          </td>
          <td><%= user.email %></td>
          <td><%= user.created_at.to_formatted_s(:date) %></td>
          <td>
            <ul>
              <% user.roles&.each do |role| %>
                <li><%= role.human_name %></li>
              <% end %>
            </ul>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You're not authorised to view this page</p>
  <% end %>
</div>
