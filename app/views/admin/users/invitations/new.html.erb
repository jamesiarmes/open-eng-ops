<%= turbo_frame_tag 'modal' do %>
  <div class="modal fade" id="exampleModal" data-controller="turbo-modal" data-action="turbo:submit-end->turbo-modal#submitEnd" tabindex="-1" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%= t('devise.invitations.new.header') %></h5>
          <button type="button" class="btn-close" aria-label="Close" data-action="turbo-modal#hideModal"></button>
        </div>

        <div class="modal-body">
          <%= render 'form' %>
        </div>

        <div class="modal-footer">
          <%= submit_tag t('devise.invitations.new.submit_button'), class: 'btn btn-primary', form: 'user-invitation' %>
          <%= link_to t('common.cancel'), admin_users_path, class: 'button-cancel', data: { action: 'turbo-modal#hideModal' } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
