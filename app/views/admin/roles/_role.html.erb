<section>
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card shadow mb-4">
          <div class="card-header bg-transparent border-0">
            <h2 class="mb-0"><%= @role.human_name %></h2>
            <p class="text-muted"><%= @role.description %></p>
          </div>

          <div class="card-body pt-0">
            <% if @role.name == 'admin' %>
              <p class="text-center"><em><%=  t('.admin-permissions') %></em></p>
            <% else %>
              <ul class="list-unstyled">
                <% @role.permissions&.each do |permission| %>
                  <li class="py-3"><span class="bullet align-middle me-2"></span><%= permission.description %></li>
                <% end %>
              </ul>
            <% end %>
          </div>

          <div class="card-footer bg-transparent border-0">
            <div class="d-flex justify-content-center mb-2">
              <%= link_to t('.edit'), edit_admin_role_path, class: 'btn btn-primary mx-1' %>

              <% unless @role.name == 'admin' %>
                <%= link_to t('.delete'), admin_role_path(@role), class: 'btn btn-danger mx-1',
                            data: { turbo_method: :delete, turbo_confirm: t('.confirm-delete') } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card bg-transparent shadow mb-4">
          <div class="card-header bg-transparent border-0">
            <h2 class="mb-0"><%= t('.users') %></h2>
          </div>

          <div class="card-body pt-0">
            <%= render Table::Component.new do |table| %>
              <% table.with_header(title: 'Name') %>
              <% table.with_header(title: 'Email') %>
              <% table.with_header(title: 'Created') %>

              <% @role.users.each do |user| %>
                <% table.with_row do |row| %>
                  <% row.with_column do %>
                    <%= link_to "#{user.name} (#{user.pronouns})", admin_user_path(user) %>
                  <% end %>

                  <% row.with_column.with_content(user.email) %>
                  <% row.with_column do %>
                    <span title="<%= user.created_at.to_datetime.to_formatted_s(:db) %>">
                      <%= user.created_at.to_datetime.to_formatted_s(:date) %>
                    </span>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
