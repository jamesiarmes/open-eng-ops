<%= render Modal::Component.new title: 'Add GitHub Team' do |modal| %>
  <% modal.with_icon type: :brand, icon: 'github', classes: 'default-avatar-xs me-1' %>
  <%= render 'form', relation: @relation %>
  <% modal.with_footer do %>
    <%= submit_tag t('.create'), class: 'btn btn-primary', form: 'team-github-team' %>
  <% end %>
<% end %>
