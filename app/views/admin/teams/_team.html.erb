<div class="header">
  <div class="container py-5">
    <div class="row">
      <div class="col-4">
        <div class="card shadow mb-4">
          <div class="card-body text-center">
            <% if @team.logo.attached? %>
              <img src="<%= url_for(@team.logo) %>"
                   class="rounded-circle img-fluid avatar-lg"
                   alt="Avatar for <%= @team.human_name %>" />
            <% else %>
              <i class="bi bi-people-fill default-avatar-lg"></i>
            <% end %>

            <h5 class="mt-3"><%= @team.human_name %></h5>
            <p class="text-muted mb-3"><%= @team.description %></p>
          </div>

          <div class="card-footer bg-transparent border-0">
            <div class="d-flex justify-content-center mb-2">
              <%= link_to t('.edit'), edit_admin_team_path, class: 'btn btn-primary mx-1' %>
              <%= link_to t('.delete'), admin_team_path(@team), class: 'btn btn-danger mx-1',
                          data: { turbo_method: :delete, turbo_confirm: t('.confirm-delete') } %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-8">
        <div class="card bg-transparent shadow mb-4">
          <div class="card-header bg-transparent border-0">
            <h2 class="mb-0"><%= t('.users') %></h2>
          </div>

          <div class="card-body pt-0">
            <%= render Table::Component.new do |table| %>
              <% table.with_header(title: 'Name') %>
              <% table.with_header(title: 'Email') %>
              <% table.with_header(title: 'Created') %>

              <% @team.users.each do |user| %>
                <% table.with_row do |row| %>
                  <% row.with_column do %>
                    <%= link_to "#{user.name} (#{user.pronouns})", admin_user_path(user) %>
                  <% end %>

                  <% row.with_column.with_content(user.email) %>
                  <% row.with_column do %>
                    <span title="<%= user.created_at.to_datetime.to_formatted_s(:db) %>">
                      <%= user.created_at.to_datetime.to_formatted_s(:date) %>
                    </span>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <% @service_types.each do |type| %>
        <% if lookup_context.find_all("services/#{type.partial_path}/team/_block").any? %>
          <%= render "services/#{type.partial_path}/team/block" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
