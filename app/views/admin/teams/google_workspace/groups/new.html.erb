<%= render Modal::Component.new title: 'Add Google Group' do |modal| %>
  <% modal.with_icon type: :brand, icon: 'google', classes: 'default-avatar-xs me-1' %>
  <%= render 'form', relation: @relation %>
  <% modal.with_footer do %>
    <%= submit_tag t('.create'), class: 'btn btn-primary', form: 'team-google-group' %>
  <% end %>
<% end %>
