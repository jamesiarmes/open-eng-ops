<div class="w-full">
  <h1>Teams</h1>

  <div class="text-end p-2">
    <%= link_to t('.new'), new_admin_team_path, class: 'btn btn-primary' %>
  </div>

  <% if policy(current_user).index? %>
    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
      <tr>
        <th scope="col">Name<%# t('.name') %></th>
        <th scope="col">Description<%# t('.type') %></th>
        <th scope="col">Created<%# t('.type') %></th>
        <th scope="col"># Users<%# t('.config') %></th>
      </tr>
      </thead>
      <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <% if team.logo.attached? %>
                <img src="<%= url_for(team.logo) %>"
                     alt="Avatar for <%= team.human_name %>"
                     class="rounded-circle avatar-sm" />
              <% else %>
                <i class="bi bi-people-fill rounded-circle default-avatar-sm"></i>
              <% end %>

              <div class="ms-3">
                <p class="fw-bold mb-1"><%= link_to team.human_name, admin_team_path(team) %></p>
              </div>
            </div>
          </td>
          <td><%= team.description %></td>
          <td><%= team.created_at.to_formatted_s(:date) %></td>
          <td><%= team.users.count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You're not authorised to view this page</p>
  <% end %>
</div>
