<div class="select-outline my-2">
  <%= select_tag "service[config][#{field}]",
        options_for_select(options, @service.config[field] || (defined?(default) ? default : nil)),
        data: defined?(data_elements) ? data_elements : {},
        class: "#{form.object.errors[field].any? ? 'invalid' : ''} form-control select-input",
        required: defined?(required) ? required : false
  %>
  <%= label_tag "service[config][#{field}]", label,
                class: "mb-1 form-label select-label #{form.object.errors[field].any? ? 'invalid' : ''} #{defined?(required) ? 'required' : ''}" %>
</div>
