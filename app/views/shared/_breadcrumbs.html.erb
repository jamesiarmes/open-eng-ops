<nav class="breadcrumb-container pb-2 bg-light">
  <div class="container-fluid">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb m-0">
        <% @breadcrumbs ||= @default_breadcrumbs %>
        <% if @breadcrumbs %>
          <% @breadcrumbs.each_with_index do |crumb| %>
            <% last = @breadcrumbs.last == crumb %>
            <li class="breadcrumb-item" <%= 'aria-current="page"' if last %>>
              <% if crumb[:path] %>
                <%= link_to crumb[:name], crumb[:path], class: last ? "text-gray-400" : "" %>
              <% else %>
                <span class="<%= last ? "text-gray-400" : "" %>"><%= crumb[:name] %></span>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ol>
    </nav>
  </div>
</nav>
