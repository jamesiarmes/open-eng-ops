<section>
  <div class="container py-5">
    <div class="row">
      <div class="col-4">
        <div class="card shadow mb-4">
          <div class="card-body text-center">
            <% if @user.avatar.attached? %>
              <img src="<%= url_for(@user.avatar) %>"
                   class="rounded-circle img-fluid avatar-lg"
                   alt="Avatar for <%= @user.name %>" />
            <% else %>
              <i class="bi bi-person-circle rounded-circle default-avatar-lg"></i>
            <% end %>

            <h5 class="mt-3"><%= @user.name %></h5>
            <p class="text-muted mb-3"><%= @user.pronouns %></p>
            <p class="text-muted mb-4"><%= @user.address&.combined_locality %></p>

            <div class="d-flex justify-content-center mb-2">
              <% if policy(@user).current_user? %>
                <%= link_to t('.edit'), edit_user_path, class: 'btn btn-primary mx-1' %>
              <% elsif policy(@user).edit? %>
                <%= link_to t('.edit'), edit_admin_user_path(@user), class: 'btn btn-primary mx-1' %>
              <% end %>

              <% if policy(@user).destroy? %>
                <%= link_to t('.delete'), admin_user_path(@user),
                            class: 'btn btn-danger mx-1',
                            data: { turbo_method: :delete, turbo_confirm: t('.confirm-delete') } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-8">
        <div class="card shadow mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-3">
                <p class="mb-0"><%= t('.name') %></p>
              </div>
              <div class="col-9">
                <p class="text-muted mb-0"><%= @user.name %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-3">
                <p class="mb-0"><%= t('.pronouns') %></p>
              </div>
              <div class="col-9">
                <p class="text-muted mb-0"><%= @user.pronouns %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-3">
                <p class="mb-0"><%= t('.email') %></p>
              </div>
              <div class="col-9">
                <p class="text-muted mb-0"><%= @user.email %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-3">
                <p class="mb-0"><%= t('.phone') %></p>
              </div>
              <div class="col-9">
                <p class="text-muted mb-0"><%= @user.formatted_phone %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-3">
                <p class="mb-0"><%= t('.location') %></p>
              </div>
              <div class="col-9">
                <p class="text-muted mb-0"><%= @user.address&.combined_locality %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card shadow mb-4 mb-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <% @service_types.each do |type| %>
                <% if lookup_context.find_all("services/#{type.partial_path}/user/_link").any? %>
                  <%= render "services/#{type.partial_path}/user/link" %>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <% @service_types.each do |type| %>
        <% if lookup_context.find_all("services/#{type.partial_path}/user/_block").any? %>
          <%= render "services/#{type.partial_path}/user/block" %>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
